@model SteamStore.WebUI.Models.SigninModel
@{
    ViewBag.Title = "Sign in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="authheader">Войти</h2>
@using (Html.BeginForm("SignIn", "User", FormMethod.Post, new { @class = "addgameform" }))
{
    @Html.TextBox("Login", "", new { @placeholder = "Введите имя", @class = "forminput" })
    <div class="editor-field">
        @Html.ValidationMessageFor(model => model.Login)
    </div>
    @Html.Password("Password", "", new { @placeholder = "Введите пароль", @class = "forminput" })
    <div class="editor-field">
        @Html.ValidationMessageFor(model => model.Password)
    </div>
    <p><input type="submit" value="Войти" class="addgamebutton" /></p>
}
