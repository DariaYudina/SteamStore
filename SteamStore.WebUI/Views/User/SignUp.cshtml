@model SteamStore.WebUI.Models.SignupModel
@{
    ViewBag.Title = "Sign up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="authheader">Регистрация</h2>
@using (Html.BeginForm("SignUp", "User", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "addgameform" }))
{
    @Html.TextBox("Login", "", new { @placeholder = "Введите имя", @class = "forminput" })
    <div class="editor-field">
        @Html.ValidationMessageFor(model => model.Login)
    </div>
    @Html.Password("Password", "", new { @placeholder = "Введите пароль", @class = "forminput" })
    <div class="editor-field">
        @Html.ValidationMessageFor(model => model.Password)
    </div>
    @Html.TextBox("Email", "", new { @placeholder = "Введите email", @class = "forminput" })
    <div class="editor-field">
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <label for="file-upload" class="custom-file-upload">
        <i class="fa fa-cloud-upload"></i> Загрузите фото
    </label>
    <input id="file-upload" type="file" class="forminput" name="Avatar" />
    <p><input type="submit" value="Зарегестрироваться" class="addgamebutton" /></p>
}

